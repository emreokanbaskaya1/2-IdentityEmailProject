@model List<Message>
@{
    Layout = "~/Views/MainLayout/Index.cshtml";
    ViewData["Title"] = "Drafts";
}

<div class="col-md-9">
    <div class="card card-primary card-outline">
        <div class="card-header">
            <h3 class="card-title">Drafts</h3>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive mailbox-messages">
                <table class="table table-hover table-striped">
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="mailbox-subject">
                                    <b>@item.Subject</b>
                                </td>
                                <td class="mailbox-date">@item.DraftDate?.ToShortDateString()</td>
                                <td><a href="/Message/EditDraft/@item.MessageId" class="btn btn-info">Edit</a></td>
                                <td>
                                    <a href="/Message/DeleteDraft/@item.MessageId" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this draft?')">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="card-footer p-0">
            <div class="mailbox-controls">
                <div class="float-right">
                    @{
                        int startItem = ((ViewBag.CurrentPage - 1) * 5) + 1;
                        int endItem = Math.Min(ViewBag.CurrentPage * 5, ViewBag.TotalMessages);
                    }
                    @startItem-@endItem/@ViewBag.TotalMessages
                    <div class="btn-group">
                        @if (ViewBag.CurrentPage > 1)
                        {
                            <a href="/Message/Drafts?page=@(ViewBag.CurrentPage - 1)" class="btn btn-default btn-sm"><i class="fas fa-chevron-left"></i></a>
                        }
                        @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                        {
                            <a href="/Message/Drafts?page=@(ViewBag.CurrentPage + 1)" class="btn btn-default btn-sm"><i class="fas fa-chevron-right"></i></a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>