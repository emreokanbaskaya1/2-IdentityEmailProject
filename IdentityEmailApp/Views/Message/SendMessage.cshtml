@model SendMessageViewModel
@{
    ViewData["Title"] = "SendMessage";
    Layout = "~/Views/MainLayout/Index.cshtml";
}

<div class="col-md-9">
    <form method="post">
        <div class="card card-primary card-outline">
            <div class="card-header">
                <h3 class="card-title">Send New Mail</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <div class="form-group">
                    <input class="form-control" asp-for="ReceiverEmail" placeholder="To:" required>
                </div>
                <div class="form-group">
                    <input class="form-control" asp-for="Subject" placeholder="Subject:">
                </div>
                <div class="form-group">
                    <textarea  class="form-control" asp-for="Body" required  style="height: 300px"></textarea>
                </div>
            </div>
            <!-- /.card-body -->
            <div class="card-footer">
                <div class="float-right">
                    <button type="button" class="btn btn-default"><i class="fas fa-pencil-alt"></i> Draft</button>
                    <button type="submit" class="btn btn-primary"><i class="far fa-envelope"></i> Send</button>
                </div>
                <button type="reset" class="btn btn-default"><i class="fas fa-times"></i> Discard</button>
            </div>
            <!-- /.card-footer -->
        </div>

    </form>
    <!-- /.card -->
</div>